#include <iostream>
using namespace std;
template<typename T>
void sort( T arr[], int size){
	for(int i=0;i<size-1;i++){
		int min = i;
		for(int j=i+1;j<size;j++){
			if (arr[j] < arr[min]){
				min = j;
			}
		}
		T temp=arr[i];
		arr[i]=arr[min];
		arr[min]=temp;
	}
cout<<"displaying sorted array: "<<endl;
for(int i=0;i<size;i++){
	cout<<arr[i]<<" ";
}

}
int main() {
	int choice;
	int n1;
	int n;
	char ch;
	do{
		cout<<"------Selection Sort Menu------";
		cout<<"\n1. integer array";
		cout<<"\n2. float array";
		cout<<"\nPlease enter your choice: ";
		cin>>choice;

		switch(choice){
		case 1:
		{
			cout<<"Enter the number of elements: ";
		    cin>>n;
			int arr[n];
			cout<<"enter "<<n<< " elements: ";
			for(int i=0;i<n;i++){
				cin>>arr[i];
				}
			sort(arr,n);
			break;
		}
		case 2:
		{
			cout<<"\nEnter the number of elements: ";
			cin>>n1;
			float arr1[n1];
			cout<<"\nEnter "<<n1<< " elements: ";
			for(int i=0;i<n1;i++){
				cin>>arr1[i];
			}
			sort(arr1,n1);
		    break;
		}

	}
		cout<<"\nDo you want to continue? ";
		cin>>ch;


	}
	while(ch=='Y'||ch=='y');
return 0;
}
